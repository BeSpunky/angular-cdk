{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@bespunky/angular-cdk": ["libs/angular-cdk"],
      "@bespunky/angular-cdk/*": ["libs/angular-cdk/*"],
      "@bespunky/rxjs": ["libs/rxjs"],
      "@bespunky/rxjs/*": ["libs/rxjs/*"],
      "@bespunky/typescript-utils": [
        "libs/typescript-utils",
        "libs/typescript-utils/src/index.ts"
      ],
      "@bespunky/typescript-utils/*": ["libs/typescript-utils/src/*"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
